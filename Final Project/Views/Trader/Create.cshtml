@model TraderVM
@{
    ViewData["Title"] = "Create";
    SelectList govItem = new SelectList(Model.Governorates, "Id", "Name");
    SelectList BranchsItem = new SelectList(Model.Branchs, "Id", "Name");
}
<style>
    h6 a:hover {
        color: #ffc400 !important;
    }
</style>
<h1 class="text-light text-bold">Add Trader</h1>

<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2">
                <svg stroke="currentColor" fill="#fff" stroke-width="0" viewBox="0 0 512 512" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg"><path d="M470.7 9.4c3 3.1 5.3 6.6 6.9 10.3s2.4 7.8 2.4 12.2l0 .1v0 96c0 17.7-14.3 32-32 32s-32-14.3-32-32V109.3L310.6 214.6c-11.8 11.8-30.8 12.6-43.5 1.7L176 138.1 84.8 216.3c-13.4 11.5-33.6 9.9-45.1-3.5s-9.9-33.6 3.5-45.1l112-96c12-10.3 29.7-10.3 41.7 0l89.5 76.7L370.7 64H352c-17.7 0-32-14.3-32-32s14.3-32 32-32h96 0c8.8 0 16.8 3.6 22.6 9.3l.1 .1zM0 304c0-26.5 21.5-48 48-48H464c26.5 0 48 21.5 48 48V464c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V304zM48 416v48H96c0-26.5-21.5-48-48-48zM96 304H48v48c26.5 0 48-21.5 48-48zM464 416c-26.5 0-48 21.5-48 48h48V416zM416 304c0 26.5 21.5 48 48 48V304H416zm-96 80a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z"></path></svg>
                > <a asp-action="Index" class="text-decoration-none text-light text-bold">Traders</a> > <a asp-action="Create" class="text-decoration-none text-light text-bold">Add Trader</a>
            </h6>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="StoreName" class="control-label"></label>
                    <input asp-for="StoreName" class="form-control" />
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="SpecialPickupCost" class="control-label"></label>
                    <input asp-for="SpecialPickupCost" class="form-control" />
                    <span asp-validation-for="SpecialPickupCost" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="TraderTaxForRejectedOrders" class="control-label"></label>
                    <input asp-for="TraderTaxForRejectedOrders" class="form-control" />
                    <span asp-validation-for="TraderTaxForRejectedOrders" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GoverId" class="control-label"></label>
                    <select id="GovernorateId" class="form-control" asp-for="GoverId" asp-items="govItem" onchange="getCitesInGovernrate()">
                        <option value="">-- Select Governorate --</option>
                    </select>
                    <span asp-validation-for="GoverId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CityId" class="control-label"></label>
                    <select id="CityId" class="form-control" asp-for="CityId">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BranchId" class="control-label"></label>
                    <select class="form-control" asp-for="BranchId" asp-items="BranchsItem">
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12 mt-4">
                    <button type="submit" value="Create" class="btn btn-primary">Add</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        function getCitesInGovernrate() {
         
            var governrateId = document.getElementById("GovernorateId").value;
         
            $.ajax({
                url: "/Trader/getCitesByGovernrate/"+governrateId,
                    dataType: 'json',
                success: function (result) {
                    var cities = $("#CityId");
                    cities.empty();
                    $.each(result, function (index, city) {
                        console.log(city)
                        $("#CityId").append("<option value='" + city.id + "'>" + city.name + "</option>"); 
                    });
                }
            });
        }
    </script>

}      
       