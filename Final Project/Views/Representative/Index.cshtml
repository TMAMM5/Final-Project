@{
    @inject IAuthorizationService AuthorizationService

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int index = 1;
}
@model List<Representative>
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: bold;
        }


        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }


        .table td, .table th {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }


    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
        }


    .shadow {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }


    .table-responsive {
        overflow-x: auto;
    }


    .form-check-input[type="checkbox"] {
        width: 40px;
        height: 20px;
        margin: 0;
        cursor: pointer;
    }

        .form-check-input[type="checkbox"]:checked + .form-check-label::before {
            background-color: #007bff;
        }

        .form-check-input[type="checkbox"]:checked + .form-check-label::after {
            left: 20px;
        }

    .input-group {
        width: 100%;
    }

    .form-control.search-input {
        border-radius: 5px 0 0 5px;
        height: 38px; /* Adjust the height as needed */
    }

    .btn.btn-primary.search-button {
        border-radius: 0 5px 5px 0;
        height: 38px; /* Adjust the height to match the input */
    }

    h6 a:hover {
        color: #ffc400 !important;
    }
</style>
<h1 class="text-light text-bold">Representatives</h1>
<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2">
                <svg stroke="currentColor" fill="#fff" stroke-width="0" viewBox="0 0 640 512" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg"><path d="M624 352h-16V243.9c0-12.7-5.1-24.9-14.1-33.9L494 110.1c-9-9-21.2-14.1-33.9-14.1H416V48c0-26.5-21.5-48-48-48H112C85.5 0 64 21.5 64 48v48H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h272c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H40c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H64v128c0 53 43 96 96 96s96-43 96-96h128c0 53 43 96 96 96s96-43 96-96h48c8.8 0 16-7.2 16-16v-32c0-8.8-7.2-16-16-16zM160 464c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm320 0c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm80-208H416V144h44.1l99.9 99.9V256z"></path></svg>
                > <a asp-action="Index" class="text-decoration-none text-light text-bold">Representatives</a>
            </h6>
        </div>
        @if (AuthorizationService.AuthorizeAsync(User, Permissions.Representatives.Create).Result.Succeeded || User.IsInRole("SuperAdmin"))
        {
        <div>
            <a asp-action="Create" class="btn btn-primary ">Add Representative</a>
        </div>
        }</div>
</div>

<div class="card shadow mb-4 text-center">
    <div class="card-body">
        <div class="table-responsive">
            <div class="col-md-3">
                <form asp-action="Index">
                    <div class="input-group">
                        <input name="childname" class="form-control search-input" type="text" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-primary search-button" type="submit" id="button-addon2">Search</button>
                    </div>
                </form>
            </div>

            <partial name="_Pager" model="@pager" />

            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone number
                        </th>
                        <th>
                            Branch
                        </th>
                        <th>
                            CreationDate
                        </th>
                        <th>
                            State
                        </th>
                        <th>
                            Edit
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.AppUserId">

                            <td>
                                @(index++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppUser.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppUser.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppUser.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Branch.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppUser.creationDate)

                            </td>
                            <td>
                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Representatives.Delete).Result.Succeeded || User.IsInRole("SuperAdmin"))
                                {
                                <div class="form-check form-switch d-flex justify-content-center me-4">
                                    <input class="form-check-input me-4" type="checkbox" id="flexSwitchCheckChecked" onclick="changeStatus('@item.AppUserId') " @(item.IsDeleted ? "" : "checked")>
                                </div>
                                }</td>
                            <td>
                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Representatives.Edit).Result.Succeeded || User.IsInRole("SuperAdmin"))
                                {
                                    <a class="btn btn-secondary ml-2" asp-action="Edit" asp-route-id="@item.AppUserId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 512 512"><path d="M495.9 166.6c3.2 8.7 .5 18.4-6.4 24.6l-43.3 39.4c1.1 8.3 1.7 16.8 1.7 25.4s-.6 17.1-1.7 25.4l43.3 39.4c6.9 6.2 9.6 15.9 6.4 24.6c-4.4 11.9-9.7 23.3-15.8 34.3l-4.7 8.1c-6.6 11-14 21.4-22.1 31.2c-5.9 7.2-15.7 9.6-24.5 6.8l-55.7-17.7c-13.4 10.3-28.2 18.9-44 25.4l-12.5 57.1c-2 9.1-9 16.3-18.2 17.8c-13.8 2.3-28 3.5-42.5 3.5s-28.7-1.2-42.5-3.5c-9.2-1.5-16.2-8.7-18.2-17.8l-12.5-57.1c-15.8-6.5-30.6-15.1-44-25.4L83.1 425.9c-8.8 2.8-18.6 .3-24.5-6.8c-8.1-9.8-15.5-20.2-22.1-31.2l-4.7-8.1c-6.1-11-11.4-22.4-15.8-34.3c-3.2-8.7-.5-18.4 6.4-24.6l43.3-39.4C64.6 273.1 64 264.6 64 256s.6-17.1 1.7-25.4L22.4 191.2c-6.9-6.2-9.6-15.9-6.4-24.6c4.4-11.9 9.7-23.3 15.8-34.3l4.7-8.1c6.6-11 14-21.4 22.1-31.2c5.9-7.2 15.7-9.6 24.5-6.8l55.7 17.7c13.4-10.3 28.2-18.9 44-25.4l12.5-57.1c2-9.1 9-16.3 18.2-17.8C227.3 1.2 241.5 0 256 0s28.7 1.2 42.5 3.5c9.2 1.5 16.2 8.7 18.2 17.8l12.5 57.1c15.8 6.5 30.6 15.1 44 25.4l55.7-17.7c8.8-2.8 18.6-.3 24.5 6.8c8.1 9.8 15.5 20.2 22.1 31.2l4.7 8.1c6.1 11 11.4 22.4 15.8 34.3zM256 336a80 80 0 1 0 0-160 80 80 0 1 0 0 160z" /></svg></a>
                                }
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
            <partial name="_Pager" model="@pager" />

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script>
        function changeStatus(id) {
            $.ajax({
                url: `/Representative/changeState/${id}`,
                method: 'GET',
                success: function () {
                    console.log("Sucess");

                },
                error: function () {
                    console.log("Error");

                }
            });
        }
    </script>
        </script>
    <script>
        $(function () {
            $("#basic-text1").click(function () {
                $("Form").submit();
            })
        });
    </script>
}