            </div>
            </div>
        </div>
    </div>
<div class="card mt-4">


    <div class="card shadow mb-0 text-center">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>City Name</th>
                            <th>Shipping Cost</th>
                            <th>Pickup Cost</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                           
                           <tr>
                                <td>@item.Name </td>
                                <td>@item.ShippingCost</td>
                                <td>@item.PickUpCost</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <div class="row mt-5">
        <a asp-action="Index" class="col-3 btn btn-primary">Back</a>
    </div>
</div>