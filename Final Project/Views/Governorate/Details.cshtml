@{
}
@model List<City>
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table td, .table th {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

    .btn-secondary, .btn-primary, .btn-danger {
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
        }

        .btn-danger:hover {
            background-color: #C70039;
        }

        .btn-primary:hover {
            background-color: #293462;
        }


    .shadow {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }


    .table-responsive {
        overflow-x: auto;
    }

    .form-check-input[type="checkbox"] {
        width: 40px;
        height: 20px;
        margin: 0;
        cursor: pointer;
    }

        .form-check-input[type="checkbox"]:checked + .form-check-label::before {
            background-color: #007bff;
        }

        .form-check-input[type="checkbox"]:checked + .form-check-label::after {
            left: 20px;
        }
</style>
<div class="card mt-4">
    <div class="card-header">
        <h2>@ViewBag.GovName</h2>
        <div class="container my-2">
            <div class="row justify-content-between">
                <div>
                    <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Governorate</a> > @ViewBag.GovName > <b><a href="#" class="text-decoration-none"> Cities</a></b></h6>
                </div>
            </div>
        </div>
    </div>


    <div class="card shadow mb-0 text-center">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>City Name</th>
                            <th>Shipping Cost</th>
                            <th>Pickup Cost</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                           
                           <tr>
                                <td>@item.Name </td>
                                <td>@item.ShippingCost</td>
                                <td>@item.PickUpCost</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <div class="row mt-5">
        <a asp-action="Index" class="col-3 btn btn-primary">Back</a>
    </div>
</div>