@{
}
@model List<Branch>
<h1>Branches</h1>


<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2"><i class="fa-solid fa-house"></i> > <a asp-action="Index" class="text-decoration-none">Cities</a></h6>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-primary">Add Branch</a>
        </div>
    </div>
</div>

<div class="card shadow mb-4 text-center">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name </th>
                        <th>Creation Date</th>
                        <th>Status</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Branch branch in Model)
                    {
                        <tr id="@branch.Id">
                            <td>@branch.Id </td>
                            <td>@branch.Name</td>
                            <td>@branch.CreationDate</td>
                            <td>
                                <label class="switch">
                                    <input id="status_button" onclick="changeStatus(@branch.Id)" type="checkbox" @(branch.IsDeleted ? "" : "checked")>
                                    <span class="slider round"></span>
                                </label>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Branch" asp-route-id="@branch.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                        </tr>
                    }
                <tbody>

            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script>
        function changeStatus(id) {
            $.ajax({
                url: `/Branch/ChangeState/${id}`,
                method: 'GET',
                success: function () {
                    console.log("Sucess");

                },
                error: function () {
                    console.log("Error");

                }
            });
        }
    </script>
}