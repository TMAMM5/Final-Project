@model IdentityRole
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this role?</h3>
<div>
   
    <hr />
    <dl class="row text-dark">
        <dt class = "col-sm-2">
            Role @Html.DisplayNameFor(model => model.Name) :
        </dt>
        <dd class = "col-sm-10">
            <strong> @Html.DisplayFor(model => model.Name)</strong>
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mt-5">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </form>
</div>
