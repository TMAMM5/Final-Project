@model PermissionVM

@{
    ViewData["title"] = "Manage Roles";
}
<style>
    .check input[type="checkbox"] {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        width: 16px;
        height: 16px;
        border: 2px solid #007bff;
        border-radius: 3px;
        outline: none;
        transition: all 0.3s ease-in-out;
    }

        .check input[type="checkbox"]:checked {
            background-color: #007bff;
            border-color: #007bff;
        }


    h6 a:hover {
        color: #ffc400 !important;
    }

</style>
            <h2 class="text-light text-bold">@Model.RoleName</h2>
            <div class="container my-2">
                <div class="row justify-content-between">
                    <div>
                        <h6 class="mt-2">
                            <svg stroke="currentColor" fill="#fff" stroke-width="0" viewBox="0 0 24 24" height="20px" width="20px" xmlns="http://www.w3.org/2000/svg"><path fill="none" d="M0 0h24v24H0z"></path><path d="M12 12.75c1.63 0 3.07.39 4.24.9 1.08.48 1.76 1.56 1.76 2.73V18H6v-1.61c0-1.18.68-2.26 1.76-2.73 1.17-.52 2.61-.91 4.24-.91zM4 13c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm1.13 1.1c-.37-.06-.74-.1-1.13-.1-.99 0-1.93.21-2.78.58A2.01 2.01 0 0 0 0 16.43V18h4.5v-1.61c0-.83.23-1.61.63-2.29zM20 13c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm4 3.43c0-.81-.48-1.53-1.22-1.85A6.95 6.95 0 0 0 20 14c-.39 0-.76.04-1.13.1.4.68.63 1.46.63 2.29V18H24v-1.57zM12 6c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3z"></path></svg>
                            > <a asp-action="Index" class="text-decoration-none text-light text-bold">Roles</a>> <a asp-action="ManagePermissions" class="text-decoration-none text-light text-bold">Manage Permissions</a>
                        </h6>
                    </div>


                </div>
            </div>
<form asp-action="ManagePermissions" method="post">
    <div class="card mt-4">
        <div class="card-header">


        <div class="card shadow mb-0 text-center">
            <div class="card-body">
                <div class="table-responsive">
                    <input type="hidden" asp-for="RoleId" />
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Module Name </th>
                                <th>View</th>
                                <th>Create</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.MyRoles.Count; i += 4)
                            {
                                <tr>
                                    <td class="fs-3" scope="row">@Model.MyRoles[i].Value.Split('.')[1]</td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i].IsSelected">@Model.MyRoles[i].Value.Split('.')[2] </label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+1].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+1].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+1].IsSelected">@Model.MyRoles[i + 1].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+2].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+2].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+2].IsSelected">@Model.MyRoles[i + 2].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+3].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+3].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+3].IsSelected">@Model.MyRoles[i + 3].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>



<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/js/demo/datatables-demo.js"></script>