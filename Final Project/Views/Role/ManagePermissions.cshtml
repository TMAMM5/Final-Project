@model PermissionVM

@{
    ViewData["title"] = "Manage Roles";
}
<style>
    .check input[type="checkbox"] {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        width: 16px;
        height: 16px;
        border: 2px solid #007bff;
        border-radius: 3px;
        outline: none;
        transition: all 0.3s ease-in-out;
    }

        .check input[type="checkbox"]:checked {
            background-color: #007bff;
            border-color: #007bff;
        }
</style>
<form asp-action="ManagePermissions" method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.RoleName</h2>
            <div class="container my-2">
                <div class="row justify-content-between">
                    <div>
                        <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Roles</a> > <b><a href="#" class="text-decoration-none">Manage Permissions</a></b></h6>
                    </div>
                </div>
            </div>
        </div>


        <div class="card shadow mb-0 text-center">
            <div class="card-body">
                <div class="table-responsive">
                    <input type="hidden" asp-for="RoleId" />
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Module Name </th>
                                <th>View</th>
                                <th>Create</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.MyRoles.Count; i += 4)
                            {
                                <tr>
                                    <td class="fs-3" scope="row">@Model.MyRoles[i].Value.Split('.')[1]</td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i].IsSelected">@Model.MyRoles[i].Value.Split('.')[2] </label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+1].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+1].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+1].IsSelected">@Model.MyRoles[i + 1].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+2].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+2].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+2].IsSelected">@Model.MyRoles[i + 2].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.MyRoles[i+3].Value" />
                                            <input type="checkbox" asp-for="@Model.MyRoles[i+3].IsSelected" class="form-check-input check custom-checkbox-primary" />
                                            <label class="form-check-label check" asp-for="@Model.MyRoles[i+3].IsSelected">@Model.MyRoles[i + 3].Value.Split('.')[2] </label>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>



<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/js/demo/datatables-demo.js"></script>